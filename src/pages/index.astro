---
import BaseHead from '../components/BaseHead.astro';
import { SITE_DESCRIPTION } from '../consts';
const pageTitle = '8020 Linda Vista Rd, Unit 1C - San Diego';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={pageTitle} description={SITE_DESCRIPTION} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=SF+Pro+Display:wght@200;300;400;500;600;700&display=swap" rel="stylesheet">
		<style is:global>
			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}

			:root {
				--bg-primary: #F7F3ED; /* Swiss Coffee - warm cream */
				--bg-secondary: #FEFCF9; /* Lighter Swiss Coffee */
				--text-primary: #1A3554; /* Batik - deep navy */
				--text-secondary: #6B8AA6; /* Muted version of Batik */
				--accent: #5FA3B8; /* Raindance - teal-blue */
				--accent-hover: #4E8FA3;
				--accent-secondary: #E67E85; /* First Crush - coral-pink */
				--glass-bg: rgba(255, 252, 249, 0.72);
				--glass-border: rgba(255, 255, 255, 0.18);
				--shadow-sm: 0 2px 8px rgba(26, 53, 84, 0.04);
				--shadow-md: 0 8px 32px rgba(26, 53, 84, 0.08);
				--shadow-lg: 0 16px 64px rgba(26, 53, 84, 0.12);
			}

			@supports (font-family: -apple-system) {
				body {
					font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'Segoe UI', sans-serif;
				}
			}

			body {
				font-family: 'SF Pro Display', -apple-system, BlinkMacSystemFont, sans-serif;
				background: var(--bg-primary);
				color: var(--text-primary);
				line-height: 1.47059;
				letter-spacing: -0.022em;
				font-weight: 400;
				-webkit-font-smoothing: antialiased;
				-moz-osx-font-smoothing: grayscale;
				overflow-x: hidden;
			}

			/* Animated gradient background */
			.bg-gradient {
				position: fixed;
				top: 0;
				left: 0;
				width: 100%;
				height: 100%;
				z-index: -1;
				background: linear-gradient(135deg,
					#F7F3ED 0%,
					#E8F3F7 25%,
					#FFF0F1 50%,
					#E1EDF2 75%,
					#F7F3ED 100%);
				background-size: 400% 400%;
				animation: gradientShift 20s ease infinite;
			}

			@keyframes gradientShift {
				0%, 100% { background-position: 0% 50%; }
				50% { background-position: 100% 50%; }
			}

			/* Glass morphism utility */
			.glass {
				background: var(--glass-bg);
				backdrop-filter: saturate(180%) blur(20px);
				-webkit-backdrop-filter: saturate(180%) blur(20px);
				border: 1px solid var(--glass-border);
			}

			/* Hero Section */
			.hero {
				position: relative;
				height: 100vh;
				display: flex;
				align-items: center;
				justify-content: center;
				overflow: hidden;
			}

			.hero-bg {
				position: absolute;
				top: 0;
				left: 0;
				width: 100%;
				height: 100%;
			}

			.hero-overlay {
				position: absolute;
				top: 0;
				left: 0;
				width: 100%;
				height: 100%;
				background: linear-gradient(180deg,
					rgba(245, 245, 247, 0) 0%,
					rgba(245, 245, 247, 0.6) 50%,
					rgba(245, 245, 247, 0.95) 100%);
			}

			.hero-content {
				position: relative;
				z-index: 10;
				text-align: center;
				max-width: 980px;
				padding: 0 20px;
				animation: fadeInUp 1s ease-out;
			}

			.hero-label {
				font-size: 14px;
				font-weight: 600;
				letter-spacing: 0.8px;
				text-transform: uppercase;
				color: var(--accent);
				margin-bottom: 16px;
				opacity: 0;
				animation: fadeIn 0.8s ease-out 0.2s forwards;
			}

			.hero h1 {
				font-size: clamp(48px, 8vw, 96px);
				font-weight: 600;
				line-height: 1.0834933333;
				letter-spacing: -0.015em;
				margin-bottom: 16px;
				background: linear-gradient(135deg, #1A3554 0%, #5FA3B8 100%);
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
				background-clip: text;
				opacity: 0;
				animation: fadeIn 0.8s ease-out 0.4s forwards;
			}

			.hero-address {
				font-size: clamp(21px, 3vw, 28px);
				font-weight: 400;
				color: var(--text-secondary);
				margin-bottom: 12px;
				opacity: 0;
				animation: fadeIn 0.8s ease-out 0.6s forwards;
			}

			.hero-price {
				font-size: clamp(40px, 5vw, 64px);
				font-weight: 700;
				color: var(--text-primary);
				margin-bottom: 40px;
				opacity: 0;
				animation: fadeIn 0.8s ease-out 0.8s forwards;
			}

			.cta-button {
				display: inline-block;
				padding: 16px 32px;
				background: var(--accent);
				color: white;
				text-decoration: none;
				font-size: 17px;
				font-weight: 500;
				border-radius: 980px;
				transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
				box-shadow: 0 4px 16px rgba(95, 163, 184, 0.3);
				opacity: 0;
				animation: fadeIn 0.8s ease-out 1s forwards;
			}

			.cta-button:hover {
				background: var(--accent-hover);
				box-shadow: 0 8px 24px rgba(95, 163, 184, 0.4);
				transform: translateY(-2px);
			}

			.cta-button:active {
				transform: translateY(0);
			}

			/* Photo Gallery */
			.gallery-section {
				padding: 120px 5% 80px;
				position: relative;
			}

			.section-header {
				text-align: center;
				margin-bottom: 80px;
			}

			.section-eyebrow {
				font-size: 14px;
				font-weight: 600;
				letter-spacing: 0.8px;
				text-transform: uppercase;
				color: var(--accent);
				margin-bottom: 8px;
			}

			.section-title {
				font-size: clamp(40px, 6vw, 64px);
				font-weight: 600;
				line-height: 1.0834933333;
				letter-spacing: -0.015em;
				margin-bottom: 12px;
			}

			.section-subtitle {
				font-size: 21px;
				color: var(--text-secondary);
				font-weight: 400;
			}

			.gallery-grid {
				display: grid;
				grid-template-columns: repeat(12, 1fr);
				gap: 20px;
				max-width: 1400px;
				margin: 0 auto;
			}

			.gallery-item {
				position: relative;
				border-radius: 20px;
				overflow: hidden;
				transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
				cursor: pointer;
			}

			.gallery-item.large {
				grid-column: span 8;
				aspect-ratio: 16/10;
			}

			.gallery-item.medium {
				grid-column: span 4;
				aspect-ratio: 1;
			}

			.gallery-item.small {
				grid-column: span 6;
				aspect-ratio: 4/3;
			}

			.gallery-item img {
				width: 100%;
				height: 100%;
				object-fit: cover;
				transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
			}

			.gallery-item:hover {
				transform: scale(1.02);
				box-shadow: var(--shadow-lg);
				z-index: 10;
			}

			.gallery-item:hover img {
				transform: scale(1.05);
			}

			.gallery-label {
				position: absolute;
				bottom: 0;
				left: 0;
				right: 0;
				padding: 24px;
				background: linear-gradient(to top, rgba(0, 0, 0, 0.6), transparent);
				color: white;
				font-size: 17px;
				font-weight: 500;
				opacity: 0;
				transform: translateY(20px);
				transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
			}

			.gallery-item:hover .gallery-label {
				opacity: 1;
				transform: translateY(0);
			}

			/* Highlights Grid */
			.highlights-section {
				padding: 120px 5%;
				background: var(--bg-secondary);
			}

			.highlights-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
				gap: 24px;
				max-width: 1400px;
				margin: 80px auto 0;
			}

			.highlight-card {
				padding: 40px;
				border-radius: 20px;
				transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
			}

			.highlight-card:hover {
				transform: translateY(-4px);
				box-shadow: var(--shadow-md);
			}

			.highlight-icon {
				font-size: 48px;
				margin-bottom: 20px;
				display: block;
			}

			.highlight-card h3 {
				font-size: 24px;
				font-weight: 600;
				margin-bottom: 12px;
				letter-spacing: -0.015em;
			}

			.highlight-card p {
				font-size: 17px;
				color: var(--text-secondary);
				line-height: 1.6;
			}

			/* About Section */
			.about-section {
				padding: 120px 5%;
				position: relative;
			}

			.about-container {
				max-width: 980px;
				margin: 80px auto 0;
				padding: 60px;
				border-radius: 28px;
			}

			.about-container p {
				font-size: 21px;
				line-height: 1.7;
				color: var(--text-primary);
				margin-bottom: 24px;
			}

			.about-container p:last-child {
				margin-bottom: 0;
			}

			/* Stats Section */
			.stats-section {
				padding: 120px 5%;
				background: var(--bg-secondary);
			}

			.stats-container {
				max-width: 800px;
				margin: 80px auto 0;
				padding: 48px;
				border-radius: 24px;
			}

			.stats-grid {
				display: grid;
				grid-template-columns: repeat(2, 1fr);
				gap: 32px;
			}

			.stat-item {
				text-align: center;
				padding: 24px;
				border-radius: 16px;
				background: rgba(95, 163, 184, 0.05);
				transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
			}

			.stat-item:hover {
				background: rgba(95, 163, 184, 0.08);
				transform: translateY(-2px);
			}

			.stat-number {
				font-size: 48px;
				font-weight: 700;
				line-height: 1;
				margin-bottom: 8px;
				background: linear-gradient(135deg, var(--accent) 0%, var(--text-primary) 100%);
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
				background-clip: text;
			}

			.stat-label {
				font-size: 15px;
				color: var(--text-secondary);
				font-weight: 500;
			}

			/* Features Section */
			.features-section {
				padding: 120px 5%;
			}

			.features-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
				gap: 32px;
				max-width: 1400px;
				margin: 80px auto 0;
			}

			.feature-category {
				padding: 48px;
				border-radius: 24px;
				transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
			}

			.feature-category:hover {
				transform: translateY(-4px);
				box-shadow: var(--shadow-md);
			}

			.feature-category h3 {
				font-size: 28px;
				font-weight: 600;
				margin-bottom: 28px;
				letter-spacing: -0.015em;
			}

			.feature-category ul {
				list-style: none;
			}

			.feature-category li {
				padding: 12px 0 12px 32px;
				position: relative;
				font-size: 17px;
				color: var(--text-primary);
				transition: all 0.3s ease;
			}

			.feature-category li::before {
				content: '';
				position: absolute;
				left: 0;
				top: 50%;
				transform: translateY(-50%);
				width: 20px;
				height: 20px;
				background: var(--accent);
				border-radius: 50%;
				opacity: 0.2;
			}

			.feature-category li::after {
				content: '‚úì';
				position: absolute;
				left: 5px;
				top: 50%;
				transform: translateY(-50%);
				color: var(--accent);
				font-weight: 700;
				font-size: 14px;
			}

			/* Contact Section */
			.contact-section {
				padding: 120px 5%;
				background: var(--bg-secondary);
			}

			.contact-container {
				max-width: 800px;
				margin: 80px auto 0;
			}

			.contact-grid {
				display: grid;
				gap: 20px;
				margin-bottom: 40px;
			}

			.contact-card {
				padding: 32px;
				border-radius: 20px;
				transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
				text-align: center;
			}

			.contact-card:hover {
				transform: translateY(-2px);
				box-shadow: var(--shadow-md);
			}

			.contact-label {
				font-size: 14px;
				font-weight: 600;
				letter-spacing: 0.8px;
				text-transform: uppercase;
				color: var(--text-secondary);
				margin-bottom: 8px;
			}

			.contact-value {
				font-size: 24px;
				font-weight: 600;
				color: var(--text-primary);
			}

			.contact-value a {
				color: var(--accent);
				text-decoration: none;
				transition: color 0.3s ease;
			}

			.contact-value a:hover {
				color: var(--accent-hover);
			}

			.showing-note {
				padding: 32px;
				background: linear-gradient(135deg, var(--accent) 0%, #4E8FA3 100%);
				color: white;
				border-radius: 20px;
				text-align: center;
				font-size: 17px;
				line-height: 1.6;
			}

			.showing-note strong {
				display: block;
				font-size: 21px;
				margin-bottom: 8px;
			}

			/* Footer */
			footer {
				padding: 40px 5%;
				text-align: center;
				color: var(--text-secondary);
				font-size: 14px;
				border-top: 1px solid rgba(0, 0, 0, 0.05);
			}

			/* Animations */
			@keyframes fadeIn {
				from {
					opacity: 0;
					transform: translateY(20px);
				}
				to {
					opacity: 1;
					transform: translateY(0);
				}
			}

			@keyframes fadeInUp {
				from {
					opacity: 0;
					transform: translateY(40px);
				}
				to {
					opacity: 1;
					transform: translateY(0);
				}
			}

			/* Scroll animations */
			.fade-in-view {
				opacity: 0;
				transform: translateY(30px);
				transition: opacity 0.8s cubic-bezier(0.4, 0, 0.2, 1),
					transform 0.8s cubic-bezier(0.4, 0, 0.2, 1);
			}

			.fade-in-view.visible {
				opacity: 1;
				transform: translateY(0);
			}

			/* Responsive */
			@media (max-width: 1068px) {
				.gallery-item.large,
				.gallery-item.medium,
				.gallery-item.small {
					grid-column: span 12;
				}
			}

			@media (max-width: 734px) {
				.hero-content {
					padding: 0 24px;
				}

				.section-header {
					margin-bottom: 48px;
				}

				.gallery-section,
				.highlights-section,
				.about-section,
				.stats-section,
				.features-section,
				.contact-section {
					padding: 80px 5%;
				}

				.about-container,
				.contact-container {
					padding: 40px 24px;
					margin-top: 48px;
				}

				.stats-container {
					padding: 32px 24px;
					margin-top: 48px;
				}

				.stats-grid {
					grid-template-columns: 1fr;
					gap: 20px;
				}

				.highlights-grid,
				.features-grid {
					margin-top: 48px;
				}

				.feature-category,
				.highlight-card {
					padding: 32px 24px;
				}
			}
		</style>
	</head>
