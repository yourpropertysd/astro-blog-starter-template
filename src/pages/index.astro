		<script>
			// Smooth scrolling
			document.querySelectorAll('a[href^="#"]').forEach(anchor => {
				anchor.addEventListener('click', function (e) {
					e.preventDefault();
					const target = document.querySelector(this.getAttribute('href'));
					if (target) {
						target.scrollIntoView({
							behavior: 'smooth',
							block: 'start'
						});
					}
				});
			});

			// Intersection Observer for scroll animations
			const observerOptions = {
				threshold: 0.1,
				rootMargin: '0px 0px -80px 0px'
			};

			const observer = new IntersectionObserver((entries) => {
				entries.forEach((entry, index) => {
					if (entry.isIntersecting) {
						setTimeout(() => {
							entry.target.classList.add('visible');
						}, index * 50);
					}
				});
			}, observerOptions);

			document.querySelectorAll('.fade-in-view').forEach(el => {
				observer.observe(el);
			});

			// Parallax effect for hero
			(function () {
				const hero = document.querySelector('.hero');
				const heroContent = document.querySelector('.hero-content');
				const heroOverlay = document.querySelector('.hero-overlay');

				if (!hero || !heroContent) return;

				let ticking = false;

				function update() {
					ticking = false;
					const scrolled = window.pageYOffset || document.documentElement.scrollTop || 0;

					// Only apply while the hero is on screen
					const heroHeight = hero.offsetHeight || 0;
					const progress = heroHeight ? Math.min(Math.max(scrolled / heroHeight, 0), 1) : 0;

					// Subtle parallax
					heroContent.style.transform = `translateY(${scrolled * 0.15}px)`;

					// Fade overlay in slightly as you scroll
					if (heroOverlay) {
						const opacity = 0.15 + (progress * 0.55);
						heroOverlay.style.opacity = String(Math.min(Math.max(opacity, 0), 1));
					}
				}

				function onScroll() {
					if (ticking) return;
					ticking = true;
					window.requestAnimationFrame(update);
				}

				window.addEventListener('scroll', onScroll, { passive: true });
				update();
			})();
		</script>
